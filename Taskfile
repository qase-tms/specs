#!/usr/bin/env bash

set -o nounset
set -o pipefail

function build() {
  npm run test
}

function publish() {
  npm run publish
}

function latest() {
  local packages=("${@}")
  if [ ${#packages[@]} = 0 ]; then
    IFS=' ' read -r -a packages <<<"$(npm ls --depth=0 --prod --json |
      jq -r '.dependencies | keys | join(" ")')"
  fi
  for pkg in "${packages[@]}"; do
    npm install "${pkg}"@latest
  done
}

function go() {
  rm -rf examples/sdk/go/*
  codegen generate -i /specs/api.yaml -g go -o /sdk/go -D packageName=client
  goimports -ungroup -local qase -w examples/sdk/go/
}

function php() {
  rm -rf examples/sdk/php/*
  codegen generate -i /specs/api.yaml -g php -o /sdk/php -c /sdk/php.yml
  # TODO:extend add formatting
}

function typescript() {
  rm -rf examples/sdk/ts/*
  codegen generate -i /specs/api.yaml -g typescript-axios -t /sdk/ts-axios-template -o /sdk/ts -c /sdk/ts.yml
  # TODO:extend add formatting
}

function ui() {
  docker run --rm -it \
    -e SWAGGER_JSON=/specs/api.yaml \
    -p 8080:8080 \
    -v "$(pwd)"/api.yaml:/specs/api.yaml \
    swaggerapi/swagger-ui
}

codegen() {
  docker run --rm -it \
    -v "$(pwd)"/api.yaml:/specs/api.yaml \
    -v "$(pwd)"/examples/sdk:/sdk \
    openapitools/openapi-generator-cli "${@}"
}

__default() { help; }

"${@:-__default}"
